#!/bin/bash

declare cesi_web="${CESI_HOME}/cesi/web.py"

cd "${CESI_HOME}"
term.log "    updating '$cesi_web' with 'FlaskReverseProxied'\n" 'white'

echo '- before ----------------------------------------------------------------------------'
cat "$cesi_web"
echo '- after -----------------------------------------------------------------------------'
sed  -i -e '/from flask import Flask,/ a\
from flask_reverse_proxy import FlaskReverseProxied 
' -e '
/app = Flask(__name__)/ a\
proxied = FlaskReverseProxied(app)
' "$cesi_web"
cat "$cesi_web"
echo '-------------------------------------------------------------------------------------'
